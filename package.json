{
  "name": "tdd-node-express",
  "version": "1.0.0",
  "description": "Test Driven Development with NodeJS and Express",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "nodemon index.js",
    "test": "jest --watch"
  },
  "author": "Oreofe Stephen",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.1",
    "nodemon": "^2.0.20",
    "sequelize": "^6.23.2",
    "sqlite3": "^5.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.3",
    "babel-jest": "^29.1.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint: recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "semi": "warn",
      "quotes": [
        "warn",
        "single"
      ]
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
